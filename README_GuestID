                       
            // Inputs date and time now and guest name without spaces into the guestD
            // https://stackoverflow.com/questions/3905180/how-to-trim-whitespace-between-characters
            string str = inputNameGuest.Text;
            str = Regex.Replace(str, @"\s", "");
            string guestID = ($"{DateTime.Now.ToString("ddMMyyyyHHmmss")}_{str}");

